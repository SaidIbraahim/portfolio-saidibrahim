{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/",
      "status": 301,
      "headers": { "Location": "https://portfolio.saidibrahim.tech" }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
